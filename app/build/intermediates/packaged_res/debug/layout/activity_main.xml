<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="335dp"
        android:layout_height="44dp"
        android:layout_marginTop="4dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txtCheckmate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CHECKMATE"
            android:textAlignment="viewEnd"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/darkgray"
            android:fontFamily="@font/blinkerbold"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="345dp"
        android:layout_height="160dp"
        android:layout_marginBottom="12dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.914">

        <TextView
            android:id="@+id/txtHi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/blinkerbold"
            android:text="Hi!"
            android:textSize="40sp"
            android:textColor="@color/darkgray"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtWelcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/blinkerbold"
            android:text="Welcome"
            android:textSize="40sp"
            android:textColor="@color/darkgray"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtDes1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/blinkerlight"
            android:text="Im waiting for you, please enter your details"
            android:textColor="@color/darkgray"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="356dp"
        android:layout_height="247dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.448"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.777">

        <EditText
            android:id="@+id/edtEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textColor="@color/darkgray"
            android:hint="Email"
            android:fontFamily="@font/blinkerregular"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/edtPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textColor="@color/darkgray"
            android:hint="Password"
            android:fontFamily="@font/blinkerregular"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/txtForgot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:linksClickable="true"
            android:text="@string/forgotLink"
            android:textColorLink="@color/blue"
            android:fontFamily="@font/blinkerbold"
            android:textColor="@color/darkgray"
            android:textAlignment="viewEnd" />

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/darkgray"
            android:textColor="@color/white"
            android:fontFamily="@font/blinkerextrabold"
            android:text="Login" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="336dp"
        android:layout_height="26dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:layout_constraintVertical_bias="0.486">

        <TextView
            android:id="@+id/txtDes2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/blinkerlight"
            android:textColor="@color/darkgray"
            android:textAlignment="viewEnd"
            android:text="Don't have an account?" />

        <TextView
            android:id="@+id/txtSignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/blinkerbold"
            android:textColor="@color/darkgray"
            android:textStyle="bold"
            android:textAlignment="viewStart"
            android:text="@string/signUp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>