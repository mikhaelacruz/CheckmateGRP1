<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgotPassword">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="355dp"
        android:layout_height="44dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.416">

        <TextView
            android:id="@+id/txtTitle2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/blinkerbold"
            android:text="CHECKMATE"
            android:textAlignment="viewEnd"
            android:textColor="@color/darkgray"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="358dp"
        android:layout_height="193dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.471"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.304">

        <TextView
            android:id="@+id/txtDes3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/blinkerbold"
            android:text="Ohno!"
            android:textColor="@color/darkgray"
            android:textSize="40sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtDes4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/blinkerbold"
            android:text="I forgot"
            android:textColor="@color/darkgray"
            android:textSize="40sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtDes5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/blinkerlight"
            android:text="Enter your email and we'll send you"
            android:textColor="@color/darkgray"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txtDes6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/blinkerlight"
            android:text="a link to change a new password"
            android:textColor="@color/darkgray"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="354dp"
        android:layout_height="166dp"
        android:layout_marginTop="24dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4"
        app:layout_constraintVertical_bias="0.0">

        <EditText
            android:id="@+id/edtEmailForgotPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Email"
            android:fontFamily="@font/blinkerregular"
            android:inputType="textEmailAddress"
            android:textColor="@color/darkgray" />

        <Button
            android:id="@+id/btnForgotPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/darkgray"
            android:text="Forgot Password"
            android:fontFamily="@font/blinkerextrabold"
            android:textColor="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtDes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/blinkerlight"
                android:text="Back to Log in  "
                android:textAlignment="viewEnd"
                android:textColor="@color/darkgray" />

            <TextView
                android:id="@+id/txtLogIn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/blinkerbold"
                android:text="@string/login"
                android:textAlignment="viewStart"
                android:textColor="@color/darkgray"
                android:textStyle="bold"
                android:clickable="true"/>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>